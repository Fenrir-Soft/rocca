---
import Icon from "../icon.astro";
import IconLupa from "../../assets/images/icons/lupa-alt.svg?raw";
---

<div class="box-busca-topo">
    <div></div>
    <div class="box-finalidade">
        <input
            type="radio"
            checked
            id="finalidade-alugar"
            name="finalidade"
            value="alugar"
        />
        <label class="raleway" for="finalidade-alugar">Alugar</label>
        <input
            type="radio"
            id="finalidade-comprar"
            name="finalidade"
            value="comprar"
        />
        <label class="raleway" for="finalidade-comprar">Comprar</label>
        <input
            type="radio"
            id="finalidade-condominios"
            name="finalidade"
            value="condominios"
        />
        <label class="raleway" for="finalidade-condominios">Condomínios</label>
    </div>
    <div class="box-busca-codigo">
        <input
            class="raleway"
            type="text"
            id="codigo"
            name="codigo"
            placeholder="Busca por Código"
        />
        <Icon icon={IconLupa} />
    </div>
</div>
<style lang="less" scoped>
    .box-busca-topo {
        display: flex;
        margin-bottom: 1.5em;

        @media (max-width: 55em) {
            flex-direction: column;
            width: 90vw;
            max-width: 24em;
        }
        & > div {
            min-width: 10em;
        }
        .box-finalidade {
            background-color: white;
            border-radius: 0.75em;
            padding: 0.6em;
            display: flex;
            margin: 0;
            @media (max-width: 55em) {
                flex-direction: column;
                max-width: 100%;
                width: 100%;
                margin: 1em 0;
            }

            input[type="radio"] {
                display: none;
                &:checked + label {
                    background-color: #4e4d4f;
                    color: white;
                }
            }
            label {
                display: block;
                text-align: center;
                background-color: white;
                padding: 0.6em 2.5em;
                border-radius: 0.5em;

                border-width: 2px;
                border-style: solid;
                border-color: white;
                cursor: pointer;
                font-weight: 500;
            }
        }

        .box-busca-codigo {
            display: flex;
            align-items: center;
            position: relative;
            color: black;
            input {
                height: 100%;
                max-width: 100%;
                width: 11.5em;
                border: 0;
                padding-left: 1em;
                background-color: transparent;
                font-size: 1em;
                font-weight: 600;
                &::placeholder {
                    color: black;
                }
                &:focus {
                    &::placeholder {
                        color: transparent;
                    }
                }
                outline: none;
            }
            svg {
                position: absolute;
                fill: black;
                stroke: black;
                width: 12px;
                height: 12px;
                right: 0.5em;
            }
        }
    }
</style>
